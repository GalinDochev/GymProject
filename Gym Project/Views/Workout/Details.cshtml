@using Gym_Project.Models.WorkoutsModels;
@model WorkoutDetailsViewModel

@{
    ViewBag.Title = "Workout Details";
}

<div class="container">
    <h2>@Model.Name</h2>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid">
        </div>
        <div class="col-md-6">
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Duration:</strong> @Model.Duration minutes</p>
            <p><strong>Difficulty Level:</strong> @Model.DifficultyLevel</p>
            <p><strong>Category:</strong> @Model.CategoryName</p>
        </div>
    </div>
    <hr>
    <h3>Exercises</h3>
    @foreach (var exerciseWorkout in Model.ExerciseWorkouts)
    {
        <div class="row">
            <div class="col-md-4">
                <strong>Name:</strong> @exerciseWorkout.Exercise.Name
            </div>
            <div class="col-md-4">
                <strong>Repetitions:</strong> @exerciseWorkout.Exercise.Repetitions
            </div>
            <div class="col-md-4">
                <strong>Sets:</strong> @exerciseWorkout.Exercise.Sets
            </div>
        </div>
        <hr>
    }
</div>