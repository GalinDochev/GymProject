@{
    ViewData["Title"] = "Home Page";
}

<div class="bg-image">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center text-white py-5">
                <h1>Welcome to GymProject</h1>
                <p>Your journey to a healthier lifestyle starts here.</p>
            </div>
        </div>

        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://www.eatthis.com/wp-content/uploads/sites/4/2023/03/woman-elliptical.jpg?quality=82&strip=1" class="d-block mx-auto carousel-img" alt="First slide">
                    
                </div>
                <div class="carousel-item">
                    <img src="https://www.mensjournal.com/.image/ar_4:3%2Cc_fill%2Ccs_srgb%2Cfl_progressive%2Cq_auto:good%2Cw_1200/MTk2MTM2NzQyNzY3NTAyODUz/7-pieces-of-luxury-gym-equipment-you-should-start-saving-for-now.jpg" class="d-block mx-auto carousel-img" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img src="https://lifehacker.com/imagery/slideshow/01HF2HTKM7Q86FKAHDF1R2KS2R/hero-image.fill.size_1248x702.v1699836060.jpg" class="d-block mx-auto carousel-img" alt="Third slide">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

<style>
    .bg-image {
        min-height: 100vh;
        background-image: url('https://web-back.perfectgym.com/sites/default/files/styles/460x/public/equipment%20%286%29.jpg?itok=bC0T32-K');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .carousel-item img {
        width: 400px;
        height: 400px;
        object-fit: cover;
    }

    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background */
        padding: 20px; /* Adjust padding as needed */
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2); /* Add a subtle shadow */
    }
        .carousel-caption h5 {
            font-size: 2rem;
        }

        .carousel-caption p {
            font-size: 1.5rem;
        }
</style>